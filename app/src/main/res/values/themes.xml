<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/cyprus_primary</item>
        <item name="colorPrimaryVariant">@color/cyprus_secondary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/cyprus_accent</item>
        <item name="colorSecondaryVariant">@color/cyprus_secondary</item>
        <item name="colorOnSecondary">@color/cyprus_text</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/cyprus_background</item>
        <item name="android:statusBarColor">@color/cyprus_primary</item>
        <item name="android:navigationBarColor">@color/cyprus_primary</item>

        <!-- Toolbar & Action Bar -->
        <item name="android:actionBarStyle">@style/CyprusActionBar</item>
    </style>
    <style name="CyprusActionBar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/cyprus_background</item>  <!-- Light Grayish Blue -->
        <item name="android:elevation">4dp</item>  <!-- Subtle shadow effect -->
        <item name="titleTextColor">@color/cyprus_text</item>  <!-- Dark Gray for text -->
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

</resources>